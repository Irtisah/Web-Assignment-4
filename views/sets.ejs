<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Sets Collection</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .hero {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        .btn {
            padding: 8px 16px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { page: "/lego/sets"}) %>

    <div class="hero bg-blue-500 text-white p-8 rounded-lg mb-8">
        <h1 class="text-4xl font-bold mb-4">All the sets are below:</h1>
    </div>

    <table class="table-auto">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Theme</th>
                <th>Year</th>
                <th>Parts</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <% sets.forEach(set => { %>
                <tr>
                    <td><img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-16 h-16"></td>
                    <td><%= set.name %></td>
                    <td><a href="/lego/sets?theme=<%= set.theme %>" class="btn"><%= set.theme %></a></td>
                    <td><%= set.year %></td>
                    <td><%= set.num_parts %></td>
                    <td><a href="/lego/sets/<%= set.set_num %>" class="btn">Details</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
